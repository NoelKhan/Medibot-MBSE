name: Complete Stack CI/CD

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main, develop]
  workflow_dispatch:

env:
  NODE_VERSION: '20'
  PYTHON_VERSION: '3.9'
  REGISTRY: ghcr.io

jobs:
  # ===========================
  # PHASE 1: BACKEND & AI AGENT (Parallel)
  # ===========================
  
  backend-lint-test:
    name: Backend - Lint & Test
    runs-on: ubuntu-latest
    
    services:
      postgres:
        image: postgres:14
        env:
          POSTGRES_USER: postgres
          POSTGRES_PASSWORD: postgres
          POSTGRES_DB: medibot_test
        ports:
          - 5432:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
      
      redis:
        image: redis:7-alpine
        ports:
          - 6379:6379
        options: >-
          --health-cmd "redis-cli ping"
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
          cache-dependency-path: 'medibot-backend/package-lock.json'

      - name: Install dependencies
        working-directory: ./medibot-backend
        run: npm ci

      - name: Run linting
        working-directory: ./medibot-backend
        run: npm run lint

      - name: Run tests
        working-directory: ./medibot-backend
        run: npm run test:cov
        env:
          DATABASE_HOST: localhost
          DATABASE_PORT: 5432
          DATABASE_USER: postgres
          DATABASE_PASSWORD: postgres
          DATABASE_NAME: medibot_test
          JWT_SECRET: test-secret-key
          REDIS_HOST: localhost
          REDIS_PORT: 6379

      - name: Build backend
        working-directory: ./medibot-backend
        run: npm run build

  ai-agent-lint-test:
    name: AI Agent - Lint & Test
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: ${{ env.PYTHON_VERSION }}
          cache: 'pip'
          cache-dependency-path: 'medibot-backend/python/aiagent/requirements.txt'

      - name: Install dependencies
        working-directory: ./medibot-backend/python/aiagent
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install -r api/requirements.txt
          pip install pytest pytest-asyncio pytest-cov flake8 black

      - name: Run linting
        working-directory: ./medibot-backend/python/aiagent
        run: |
          flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics || true
          black --check . || true

      - name: Run tests
        working-directory: ./medibot-backend/python/aiagent
        run: pytest tests/ --cov=. --cov-report=xml || true

  backend-build:
    name: Backend - Build Docker Image
    runs-on: ubuntu-latest
    needs: [backend-lint-test, ai-agent-lint-test]
    if: github.event_name != 'pull_request'
    
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push backend image
        uses: docker/build-push-action@v5
        with:
          context: ./medibot-backend
          file: ./medibot-backend/infrastructure/Docker/Dockerfile
          push: true
          tags: |
            ${{ env.REGISTRY }}/${{ github.repository }}/backend:latest
            ${{ env.REGISTRY }}/${{ github.repository }}/backend:${{ github.sha }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  ai-agent-build:
    name: AI Agent - Build Docker Image
    runs-on: ubuntu-latest
    needs: [backend-lint-test, ai-agent-lint-test]
    if: github.event_name != 'pull_request'
    
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push AI agent image
        uses: docker/build-push-action@v5
        with:
          context: ./medibot-backend/python/aiagent
          file: ./medibot-backend/python/aiagent/Dockerfile
          push: true
          tags: |
            ${{ env.REGISTRY }}/${{ github.repository }}/ai-agent:latest
            ${{ env.REGISTRY }}/${{ github.repository }}/ai-agent:${{ github.sha }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  # ===========================
  # PHASE 2: WEB APP (Depends on Backend)
  # ===========================
  
  web-build:
    name: Web - Build & Test
    runs-on: ubuntu-latest
    needs: [backend-build, ai-agent-build]
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
          cache-dependency-path: 'medibot-web/package-lock.json'

      - name: Install dependencies
        working-directory: ./medibot-web
        run: npm ci

      - name: Run linting
        working-directory: ./medibot-web
        run: npm run lint || true

      - name: Type check
        working-directory: ./medibot-web
        run: npx tsc --noEmit

      - name: Build production bundle
        working-directory: ./medibot-web
        env:
          VITE_API_URL: ${{ secrets.VITE_API_URL_PROD || 'https://api.medibot.health' }}
          VITE_AI_AGENT_URL: ${{ secrets.VITE_AI_AGENT_URL_PROD || 'https://ai.medibot.health' }}
        run: npm run build

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: web-dist
          path: medibot-web/dist
          retention-days: 7

  web-docker-build:
    name: Web - Build Docker Image
    runs-on: ubuntu-latest
    needs: web-build
    if: github.event_name != 'pull_request'
    
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push web image
        uses: docker/build-push-action@v5
        with:
          context: ./medibot-web
          file: ./medibot-web/infrastructure/Dockerfile
          push: true
          tags: |
            ${{ env.REGISTRY }}/${{ github.repository }}/web:latest
            ${{ env.REGISTRY }}/${{ github.repository }}/web:${{ github.sha }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  # ===========================
  # PHASE 3: MOBILE APP (Depends on Backend & Web)
  # ===========================
  
  mobile-build:
    name: Mobile - Build & Test
    runs-on: ubuntu-latest
    needs: [web-build]
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
          cache-dependency-path: 'medibot-mobile/package-lock.json'

      - name: Install dependencies
        working-directory: ./medibot-mobile
        run: npm ci

      - name: Run linting
        working-directory: ./medibot-mobile
        run: npm run lint || true

      - name: Type check
        working-directory: ./medibot-mobile
        run: npx tsc --noEmit

      - name: Run tests
        working-directory: ./medibot-mobile
        run: npm test -- --coverage || true

  # ===========================
  # PHASE 4: DEPLOYMENT
  # ===========================
  
  deploy-staging:
    name: Deploy to Staging
    runs-on: ubuntu-latest
    needs: [backend-build, ai-agent-build, web-docker-build, mobile-build]
    if: github.ref == 'refs/heads/develop' && github.event_name == 'push'
    
    environment:
      name: staging
      url: https://staging.medibot.health
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Deploy to staging
        run: |
          echo "Deploying to staging environment..."
          # Add your deployment script here
          # Example: kubectl apply -f infrastructure/k8s/staging/

  deploy-production:
    name: Deploy to Production
    runs-on: ubuntu-latest
    needs: [backend-build, ai-agent-build, web-docker-build, mobile-build]
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    
    environment:
      name: production
      url: https://medibot.health
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Deploy to production
        run: |
          echo "Deploying to production environment..."
          # Add your deployment script here
          # Example: kubectl apply -f infrastructure/k8s/production/

  # ===========================
  # NOTIFICATION
  # ===========================
  
  notify:
    name: Send Deployment Notification
    runs-on: ubuntu-latest
    needs: [deploy-staging, deploy-production]
    if: always()
    
    steps:
      - name: Send notification
        run: |
          echo "Build and deployment completed!"
          # Add notification logic (Slack, Email, etc.)
