# Dockerfile for MediBot Mobile Web Build
# This builds the Expo web version for deployment

FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Build for web
RUN npx expo export:web

# Production image
FROM nginx:alpine

# Copy built files
COPY --from=builder /app/web-build /usr/share/nginx/html

# Copy nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
