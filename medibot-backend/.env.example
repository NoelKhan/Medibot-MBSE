# ============================================
# MediBot Backend - Environment Configuration
# ============================================
# Copy this file to .env for development
# Copy to .env.test for testing
# Never commit .env files to git!

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database - PostgreSQL
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=medibot
DB_PASSWORD=medibot_dev_password_change_in_production
DB_DATABASE=medibot_dev
DB_SYNCHRONIZE=false  # Set to true only in development
DB_LOGGING=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Redis (Session & Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=900  # 15 minutes

# Rate Limiting
RATE_LIMIT_TTL=900  # 15 minutes (900 seconds)
RATE_LIMIT_MAX=100  # 100 requests per TTL

# CORS (Frontend URLs)
CORS_ORIGIN=http://localhost:19006,exp://192.168.1.100:19000
CORS_CREDENTIALS=true

# Expo Go Testing (Local Network)
# Replace with your computer's local IP address
# Find it: macOS: ifconfig | grep "inet " | grep -v 127.0.0.1
#          Windows: ipconfig
#          Linux: hostname -I
LOCAL_IP=192.168.1.100

# AWS Configuration (For production deployment)
# Leave empty for local development
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Logging
LOG_LEVEL=debug  # debug, info, warn, error

# Email Configuration (SMTP)
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For SendGrid: Use API key as password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@medibot.com
MAIL_TEST_RECIPIENT=noel5khan@gmail.com  # All emails in dev/test go here

# Sample Data
LOAD_SAMPLE_DATA=true  # Auto-load sample users/cases in development

# Feature Flags (Optional - for gradual rollout)
ENABLE_WEBSOCKET=false  # false = HTTP polling, true = WebSocket
ENABLE_FHIR_FORMAT=false  # Simplified format for prototype

# AI Agent Configuration
AI_AGENT_URL=http://localhost:8000
OLLAMA_MODEL=medllama2
AI_TIMEOUT_MS=30000
