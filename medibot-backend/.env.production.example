# ============================================
# MediBot Backend - Production Environment
# ============================================
# SECURITY CRITICAL: Never commit this file with real values!
# Use secret management tools (AWS Secrets Manager, HashiCorp Vault, etc.)

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api

# Database - PostgreSQL (Use managed RDS in production)
DB_TYPE=postgres
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=medibot_prod
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS
DB_DATABASE=medibot_prod
DB_SYNCHRONIZE=false  # NEVER true in production!
DB_LOGGING=false

# JWT Authentication (MUST be unique and strong)
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MIN_64_CHARS_RANDOM_STRING
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=CHANGE_ME_PRODUCTION_REFRESH_SECRET_MIN_64_CHARS_RANDOM_STRING
JWT_REFRESH_EXPIRATION=7d

# Redis (Use ElastiCache in production)
REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_TTL=900

# Rate Limiting
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=100

# CORS (Production URLs only)
CORS_ORIGIN=https://app.medibot.com,https://www.medibot.com
CORS_CREDENTIALS=true

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
AWS_S3_BUCKET=medibot-prod-uploads

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug

# Email Configuration (Production SMTP)
MAIL_HOST=email-smtp.us-east-1.amazonaws.com  # AWS SES
MAIL_PORT=587
MAIL_USER=AKIAXXXXXXXXXXXXXXXX  # SES SMTP credentials
MAIL_PASSWORD=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
MAIL_FROM=noreply@medibot.com

# Feature Flags
LOAD_SAMPLE_DATA=false  # Never load sample data in production!
ENABLE_WEBSOCKET=true
ENABLE_FHIR_FORMAT=false

# Monitoring & Alerting
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
NEW_RELIC_LICENSE_KEY=xxxxx

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
