# ============================================
# MediBot Backend - Test Environment
# ============================================
# Environment variables for automated testing

# Application
NODE_ENV=test
PORT=3001
API_PREFIX=api

# Database - PostgreSQL (Test Database)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=medibot_test
DB_PASSWORD=test_password
DB_DATABASE=medibot_test
DB_SYNCHRONIZE=true  # OK for test environment
DB_LOGGING=false

# JWT Authentication (Test keys - not secure)
JWT_SECRET=test-secret-key-for-testing-not-for-production
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing
JWT_REFRESH_EXPIRATION=7d

# Redis (Test instance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=900

# Rate Limiting (Disabled for tests)
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=10000

# CORS (Allow all in test)
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# AWS Configuration (Mock/Test)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_S3_BUCKET=test-bucket

# Logging
LOG_LEVEL=error  # Minimize noise in tests

# Email Configuration (Test - no real emails sent)
MAIL_HOST=localhost
MAIL_PORT=1025  # MailHog or similar test SMTP
MAIL_USER=test
MAIL_PASSWORD=test
MAIL_FROM=test@medibot.test
MAIL_TEST_RECIPIENT=test@medibot.test

# Feature Flags
LOAD_SAMPLE_DATA=false
ENABLE_WEBSOCKET=false
ENABLE_FHIR_FORMAT=false
