# Development Environment Configuration
# Automatically loaded when NODE_ENV=development

EXPO_PUBLIC_BACKEND_URL=http://localhost:3000
EXPO_PUBLIC_API_TIMEOUT=10000

# Feature Flags
EXPO_PUBLIC_ENABLE_FALLBACK_MODE=true
EXPO_PUBLIC_ENABLE_MOCK_DATA=true
EXPO_PUBLIC_ENABLE_DEV_PANEL=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Logging
EXPO_PUBLIC_LOG_API_CALLS=true
EXPO_PUBLIC_LOG_API_RESPONSES=true

# Development Settings
EXPO_PUBLIC_SHOW_DETAILED_ERRORS=true
EXPO_PUBLIC_USE_SAMPLE_DATA=true

# Security (Relaxed for development)
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=100

# Notifications (Local testing)
EXPO_PUBLIC_EMAIL_FROM_ADDRESS=dev@localhost
EXPO_PUBLIC_EMAIL_FROM_NAME=MediBot Dev

# Error Reporting (Disabled in dev)
EXPO_PUBLIC_ERROR_REPORTING_ENABLED=false
