# MediBot Environment Configuration
# ================================
# Copy this file to .env and update with your actual values

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME=MediBot
APP_VERSION=1.0.0
NODE_ENV=production
EXPO_PUBLIC_ENVIRONMENT=production

# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_32_characters_minimum
ENCRYPTION_KEY=your_encryption_key_here_32_characters_minimum

# ========================================
# LLM INTEGRATION
# ========================================
# Choose: openai, anthropic, azure, or custom
LLM_PROVIDER=openai
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-4

# OpenAI Specific (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Specific (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Azure OpenAI Specific (if using Azure)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_OPENAI_DEPLOYMENT=your_deployment_name_here

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@medibot.health

# Stripe (Payments)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Healthcare APIs
# FHIR Server
FHIR_SERVER_URL=https://hapi.fhir.org/baseR4
FHIR_API_KEY=your_fhir_api_key_here

# Epic MyChart Integration
EPIC_CLIENT_ID=your_epic_client_id_here
EPIC_CLIENT_SECRET=your_epic_client_secret_here
EPIC_SANDBOX_URL=https://fhir.epic.com/interconnect-fhir-oauth

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password_here

# ========================================
# SSL/TLS CONFIGURATION
# ========================================
ACME_EMAIL=admin@medibot.health
DOMAIN_NAME=medibot.health
API_DOMAIN=api.medibot.health

# ========================================
# CLOUD PROVIDER SETTINGS
# ========================================

# AWS (if deploying on AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=medibot-storage

# Google Cloud (if deploying on GCP)
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure (if deploying on Azure)
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_RESOURCE_GROUP=medibot-resources
AZURE_STORAGE_ACCOUNT=medibotStorage

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_CONSULTATION=true
ENABLE_VIDEO_CONSULTATION=true
ENABLE_PHARMACY_INTEGRATION=true
ENABLE_EMERGENCY_SERVICES=true
ENABLE_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_BETA_FEATURES=false

# ========================================
# PERFORMANCE TUNING
# ========================================
MAX_REQUEST_SIZE=50mb
API_TIMEOUT=30000
DATABASE_POOL_SIZE=20
REDIS_TTL=7200
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=50

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=warn
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_RETENTION_DAYS=30

# ========================================
# DEVELOPMENT OVERRIDES
# ========================================
# These are used in development environment
DEV_API_URL=http://localhost:3000
DEV_WEB_URL=http://localhost:8081
DEV_LOG_LEVEL=debug

# ========================================
# MOBILE APP CONFIGURATION
# ========================================
# Expo Configuration
EXPO_PROJECT_ID=your_expo_project_id_here
EAS_PROJECT_ID=your_eas_project_id_here

# Push Notifications
EXPO_PUSH_TOKEN=your_expo_push_token_here
FCM_SERVER_KEY=your_fcm_server_key_here
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here

# App Store Connect (iOS)
APP_STORE_CONNECT_API_KEY=your_app_store_connect_key_here
APP_STORE_CONNECT_ISSUER_ID=your_issuer_id_here

# Google Play Console (Android)
GOOGLE_PLAY_SERVICE_ACCOUNT=your_service_account_email_here
GOOGLE_PLAY_KEY_FILE=/path/to/google-play-key.json

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=medibot-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here