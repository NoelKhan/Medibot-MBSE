# MediBot Mobile - Production Environment Variables
# ================================================
# This file contains production configuration for mobile app

# Backend API URL (Production - Update with your actual URL)
EXPO_PUBLIC_BACKEND_URL=https://api.medibot.com
EXPO_PUBLIC_API_TIMEOUT=15000

# Feature Flags (Production Settings)
EXPO_PUBLIC_ENABLE_FALLBACK_MODE=false
EXPO_PUBLIC_ENABLE_MOCK_DATA=false
EXPO_PUBLIC_ENABLE_DEV_PANEL=false
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Logging (Minimal in production)
EXPO_PUBLIC_LOG_API_CALLS=false
EXPO_PUBLIC_LOG_API_RESPONSES=false
EXPO_PUBLIC_SHOW_DETAILED_ERRORS=false

# Security (Strict)
EXPO_PUBLIC_TOKEN_EXPIRY=604800
EXPO_PUBLIC_SESSION_TIMEOUT=1800000
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# Notifications
EXPO_PUBLIC_EMAIL_FROM_ADDRESS=noreply@medibot.com
EXPO_PUBLIC_EMAIL_FROM_NAME=MediBot

# Error Reporting (Update with your Sentry DSN)
EXPO_PUBLIC_ERROR_REPORTING_ENABLED=true
EXPO_PUBLIC_ERROR_REPORTING_URL=

# Analytics (Update with your analytics key)
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_ANALYTICS_KEY=

# Medical Settings
EXPO_PUBLIC_AUTO_FOLLOWUP_ENABLED=true
EXPO_PUBLIC_EMERGENCY_THRESHOLD=2

# UI/UX
EXPO_PUBLIC_DEFAULT_THEME=auto
EXPO_PUBLIC_ENABLE_HAPTICS=true

# Expo Configuration (for EAS builds)
# EXPO_PUBLIC_API_URL=https://api.medibot.com
