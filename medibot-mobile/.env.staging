# MediBot Mobile - Staging Environment Variables
# ================================================
# This file contains staging configuration for testing before production

# Backend API URL (Staging)
EXPO_PUBLIC_BACKEND_URL=https://staging.api.medibot.com
EXPO_PUBLIC_API_TIMEOUT=12000

# Feature Flags (Testing Mode)
EXPO_PUBLIC_ENABLE_FALLBACK_MODE=true
EXPO_PUBLIC_ENABLE_MOCK_DATA=false
EXPO_PUBLIC_ENABLE_DEV_PANEL=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Logging (Verbose for debugging)
EXPO_PUBLIC_LOG_API_CALLS=true
EXPO_PUBLIC_LOG_API_RESPONSES=true
EXPO_PUBLIC_SHOW_DETAILED_ERRORS=true

# Security (Moderate)
EXPO_PUBLIC_TOKEN_EXPIRY=604800
EXPO_PUBLIC_SESSION_TIMEOUT=1800000
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=10

# Notifications (Test Service)
EXPO_PUBLIC_EMAIL_FROM_ADDRESS=staging@medibot.com
EXPO_PUBLIC_EMAIL_FROM_NAME=MediBot Staging

# Error Reporting (Test Mode)
EXPO_PUBLIC_ERROR_REPORTING_ENABLED=true
EXPO_PUBLIC_ERROR_REPORTING_URL=

# Analytics (Test Mode)
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_ANALYTICS_KEY=

# Medical Settings
EXPO_PUBLIC_AUTO_FOLLOWUP_ENABLED=true
EXPO_PUBLIC_EMERGENCY_THRESHOLD=2

# UI/UX
EXPO_PUBLIC_DEFAULT_THEME=auto
EXPO_PUBLIC_ENABLE_HAPTICS=true
EXPO_PUBLIC_USE_SAMPLE_DATA=false
